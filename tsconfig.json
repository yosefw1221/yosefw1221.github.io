{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["components/*"],
      "@public/*": ["public/*"],
      "@layout/*": ["layout/*"],
      "@hook/*": ["hook/*"],
      "@firebase/*": ["firebase/*"],
      "@utils/*": ["utils/*"],
    }
    
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "gtag.js"],
  "exclude": ["node_modules"]
}
